{% extends "layout.html.twig" %}

{% block page_title %}
    Accueil
{% endblock %}

{% block content %}
    {% for label, messages in app.flashes(['warning', 'error','success']) %}
        {%  for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{ message }}
        </div>
         {%  endfor %}
    {% endfor %}

    {% if success is defined %}
        <p style="color:gold;" class="success">{{ success }}</p>
    {% endif %}

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}

        <h1 class="welcomeUser">Bienvenue sur le site du laser game {{ app.user.username }}</h1>

        <hr>

        {% if is_granted('ROLE_EMPLOYEE') %}
            <a href="{{path('employee_add_card')}}">Cr√©er une carte pour mon centre</a>
            <br>
        {% endif %}

    {% else %}
        <a href="{{path('security_login')}}">
            Veuillez vous connecter
        </a>
        ou
        <a href="{{path('customer_register')}}">Vous inscrire</a>
    {%  endif %}



{% endblock %}